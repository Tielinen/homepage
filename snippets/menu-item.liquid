<div class="group relative lg:inline-block">
  <h6
    class="
      lg:inline lg:py-5 lg:text-base lg:font-medium
      {% unless menu.dropdown %}
        lg:hidden
      {% endunless %}
    "
  >
    {{- menu.name }}
    <svg
      aria-hidden="true"
      focusable="false"
      class="relative bottom-px inline-block h-3 transform transition-transform duration-200 group-hover:rotate-180"
      viewBox="0 0 10 6"
    >
        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
      </path>
    </svg>
  </h6>
  <ul
    role="menu"
    class="
      mb-7 flex-row font-medium lg:inline
      {% if menu.dropdown %}
        lg:absolute lg:hidden lg:w-full lg:border lg:border-deepSlate lg:top-10 lg:rounded-xl lg:pl-3 lg:pr-1  lg:bg-softWhite lg:hover:block lg:group-hover:block lg:py-3 lg:z-10
      {% else %}
        lg:py-5
      {% endif %}
    "
  >
    {% for item in menu.items %}
      {%- assign item_link_first_letter = item.link | slice: 0, 1 -%}
      {%- assign is_last_menu_item = forloop.last -%}
      <li
        role="menuitem"
        class="
          pl-2 lg:mr-6 lg:bg-softWhite lg:pl-0
          {% if menu.dropdown %}
            lg:w-full
            mr-2
          {% else %}
            lg:inline-block
          {% endif %}
        "
      >
        <a
          href="{{- item.link -}}"
          class="leading-7 transition-all duration-200 lg:text-base"
          {% unless item_link_first_letter == '#' %}
            target="_blank"
          {% endunless %}
        >
          {{- item.title -}}
        </a>
      </li>
    {% endfor %}
  </ul>
</div>
