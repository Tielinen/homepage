<div class="group relative md:inline-block">
  <h6
    class="
      md:py-5 md:font-medium
      {% unless menu.dropdown %}
        md:hidden
      {% endunless %}
    "
  >
    {{- menu.name -}}
  </h6>
  <ul
    class="
      mb-7 flex-row font-medium md:inline
      {% if menu.dropdown %}
        md:absolute md:hidden md:w-full md:border md:border-deepSlate md:top-12 md:rounded-xl md:pl-3 md:pr-1  md:bg-softWhite md:hover:block md:group-hover:block md:py-3
      {% else %}
        md:py-5
      {% endif %}
    "
  >
    {% for item in menu.items %}
      {%- assign item_link_first_letter = item.link | slice: 0, 1 -%}
      {%- assign is_last_menu_item = forloop.last -%}
      <li
        class="
          pl-2 md:mr-6 md:bg-softWhite md:pl-0
          {% if menu.dropdown %}
            md:w-full
            mr-2
          {% else %}
            md:inline-block
          {% endif %}
        "
      >
        <a
          href="{{- item.link -}}"
          class="leading-7 transition-all duration-200 md:text-base"
          {% unless item_link_first_letter == '#' %}
            target="_blank"
          {% endunless %}
        >
          {{- item.title -}}
        </a>
      </li>
    {% endfor %}
  </ul>
</div>
